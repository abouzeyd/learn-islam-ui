{
  "name": "learn-islam",
  "description": "A clone of udacity to learn Islam",
  "version": "0.0.1",
  "author": "abumalick",
  "license": "Unlicense",
  "scripts": {
    "build": "gatsby build",
    "clean": "rimraf ./public",
    "commit": "git-cz",
    "lint:css": "stylelint ./src/**/*.css",
    "lint:scss": "stylelint --syntax=scss ./src/**/*.scss",
    "lint:js": "eslint .",
    "precommit": "lint-staged",
    "preview":
      "npm run clean && npm run build && http-server ./public -p 8000 -P http://localhost:8000",
    "start": "gatsby develop -H localhost",
    "test:security": "nsp check"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": ["prettier --write", "eslint", "git add"],
    "*.json": ["prettier --write", "git add"],
    "*.css": ["prettier --write", "stylelint", "git add"],
    "*.scss": ["prettier --write", "stylelint --syntax=scss", "git add"],
    "*.{md}": ["prettier --write", "git add", "git add"],
    "*.{png,jpeg,jpg,gif,svg}": ["imagemin-lint-staged", "git add"]
  },
  "dependencies": {
    "antd": "^2.13.8",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-flow-react-proptypes": "^8.0.0",
    "babel-preset-flow": "^6.23.0",
    "emotion": "^8.0.9",
    "emotion-server": "^8.0.9",
    "flow-bin": "^0.58.0",
    "gatsby": "^1.9.119",
    "gatsby-image": "^1.0.24",
    "gatsby-link": "^1.6.28",
    "gatsby-plugin-catch-links": "^1.0.5",
    "gatsby-plugin-emotion": "^1.1.8",
    "gatsby-plugin-netlify": "^1.0.8",
    "gatsby-plugin-react-helmet": "^2.0.1",
    "gatsby-remark-copy-linked-files": "^1.5.21",
    "gatsby-remark-images": "^1.5.32",
    "gatsby-source-contentful": "^1.3.23",
    "gatsby-source-filesystem": "^1.5.8",
    "gatsby-transformer-remark": "^1.7.21",
    "prop-types": "^15.5.10",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-emotion": "^8.0.9",
    "react-helmet": "^5.2.0",
    "react-icons": "^2.2.7",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "rimraf": "^2.6.1",
    "slash": "^1.0.0",
    "tachyons": "^4.9.0"
  },
  "devDependencies": {
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^3.19.0 || ^4.3.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "husky": "^0.14.3",
    "imagemin-lint-staged": "^0.3.0",
    "lint-staged": "^6.0.0",
    "nsp": "^3.1.0",
    "prettier": "^1.9.1",
    "stylelint": "^8.3.1",
    "stylelint-config-primer": "^2.2.2"
  }
}
