{
  "name": "learn-islam",
  "description": "A clone of udacity to learn Islam",
  "version": "0.0.1",
  "author": "abumalick",
  "license": "Unlicense",
  "scripts": {
    "build": "gatsby build",
    "clean": "rimraf ./public",
    "commit": "git-cz",
    "full-build": "yarn build-plugin; yarn build",
    "build-plugin":
      "cd plugins/gatsby-source-rest/; yarn; yarn build:prod; cd ../../",
    "lint:css": "stylelint ./src/**/*.css",
    "lint:scss": "stylelint --syntax=scss ./src/**/*.scss",
    "lint:js": "eslint .",
    "precommit": "lint-staged",
    "preview": "npm run clean && npm run build && yarn serve",
    "serve": "http-server ./public -p 8000 -P http://localhost:8000",
    "start": "eval $(cat .env.dev) gatsby develop -H localhost",
    "start:prod": "eval $(cat .env.prod) gatsby develop -H localhost",
    "test:security": "nsp check"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": ["prettier --write", "eslint", "git add"],
    "*.json": ["prettier --write", "git add"],
    "*.css": ["prettier --write", "stylelint", "git add"],
    "*.scss": ["prettier --write", "stylelint --syntax=scss", "git add"],
    "*.{md}": ["prettier --write", "git add", "git add"],
    "*.{png,jpeg,jpg,gif,svg}": ["imagemin-lint-staged", "git add"]
  },
  "dependencies": {
    "@material/button": "^0.34.1",
    "@material/card": "^0.34.1",
    "@material/drawer": "^0.34.0",
    "@material/list": "^0.34.1",
    "@material/textfield": "^0.34.1",
    "@material/theme": "^0.33.0",
    "@material/toolbar": "^0.34.1",
    "@material/typography": "^0.34.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-flow-react-proptypes": "^23.0.0",
    "babel-preset-flow": "^6.23.0",
    "classnames": "^2.2.5",
    "emotion": "^9.1.1",
    "emotion-server": "^9.1.1",
    "flow-bin": "^0.69.0",
    "gatsby": "^1.9.248",
    "gatsby-image": "^1.0.45",
    "gatsby-link": "^1.6.40",
    "gatsby-plugin-catch-links": "^1.0.19",
    "gatsby-plugin-emotion": "^1.1.16",
    "gatsby-plugin-netlify": "^1.0.19",
    "gatsby-plugin-postcss-sass": "^1.0.19",
    "gatsby-plugin-preact": "^1.0.17",
    "gatsby-plugin-react-helmet": "^2.0.10",
    "gatsby-plugin-sass": "^1.0.25",
    "gatsby-source-filesystem": "^1.5.29",
    "make-plural": "^4.2.0",
    "prop-types": "^15.6.1",
    "ramda": "^0.25.0",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-emotion": "^9.1.1",
    "react-helmet": "^5.2.0",
    "react-icons": "^2.2.7",
    "react-redux": "^5.0.7",
    "recompose": "^0.26.0",
    "redux": "^3.7.2",
    "rimraf": "^2.6.1",
    "slash": "^2.0.0",
    "tachyons": "^4.9.1"
  },
  "devDependencies": {
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "imagemin-lint-staged": "^0.3.0",
    "lint-staged": "^7.0.4",
    "nsp": "^3.2.1",
    "prettier": "^1.12.0",
    "stylelint": "^9.2.0",
    "stylelint-config-primer": "^2.2.5"
  }
}
