{
  "name": "learn-islam",
  "description": "A clone of udacity to learn Islam",
  "version": "0.0.1",
  "author": "abumalick",
  "license": "Unlicense",
  "scripts": {
    "build": "gatsby build",
    "clean": "rimraf ./public",
    "commit": "git-cz",
    "lint:css": "stylelint ./src/**/*.css",
    "lint:scss": "stylelint --syntax=scss ./src/**/*.scss",
    "lint:js": "eslint .",
    "precommit": "lint-staged",
    "preview": "npm run clean && npm run build && yarn serve",
    "serve": "http-server ./public -p 8000 -P http://localhost:8000",
    "start": "gatsby develop -H localhost",
    "test:security": "nsp check"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": ["prettier --write", "eslint", "git add"],
    "*.json": ["prettier --write", "git add"],
    "*.css": ["prettier --write", "stylelint", "git add"],
    "*.scss": ["prettier --write", "stylelint --syntax=scss", "git add"],
    "*.{md}": ["prettier --write", "git add", "git add"],
    "*.{png,jpeg,jpg,gif,svg}": ["imagemin-lint-staged", "git add"]
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-flow-react-proptypes": "^19.0.0",
    "babel-preset-flow": "^6.23.0",
    "emotion": "^9.0.2",
    "emotion-server": "^9.0.2",
    "flow-bin": "^0.66.0",
    "gatsby": "^1.9.212",
    "gatsby-image": "^1.0.39",
    "gatsby-link": "^1.6.37",
    "gatsby-plugin-catch-links": "^1.0.17",
    "gatsby-plugin-emotion": "^1.1.12",
    "gatsby-plugin-netlify": "^1.0.18",
    "gatsby-plugin-react-helmet": "^2.0.5",
    "gatsby-remark-copy-linked-files": "^1.5.28",
    "gatsby-remark-images": "^1.5.50",
    "gatsby-source-contentful": "^1.3.38",
    "gatsby-source-filesystem": "^1.5.23",
    "gatsby-transformer-remark": "^1.7.33",
    "prop-types": "^15.5.10",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-emotion": "^9.0.2",
    "react-helmet": "^5.2.0",
    "react-icons": "^2.2.7",
    "react-redux": "^5.0.7",
    "redux": "^3.7.2",
    "rimraf": "^2.6.1",
    "slash": "^1.0.0",
    "tachyons": "^4.9.1"
  },
  "devDependencies": {
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.18.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "imagemin-lint-staged": "^0.3.0",
    "lint-staged": "^7.0.0",
    "nsp": "^3.2.1",
    "prettier": "^1.10.2",
    "stylelint": "^9.1.1",
    "stylelint-config-primer": "^2.2.4"
  }
}
